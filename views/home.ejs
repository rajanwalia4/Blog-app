<%- include("partials/header")  -%>
	<h1>Your Posts</h1>
	<% for(let i=0;i<posts.length;i++){ %> 
		<div id="post" style="margin-bottom: 100px;">
		<h2 id="title"><a href="/post/<%= posts[i].title %>"><%= posts[i].title %></a> <a id="delete" href="/delete-post?title=<%= posts[i].title %>"> Delete</a></h2>
		<li ><%= posts[i].description.substring(0,200) %> <a href="/post?title=<%= posts[i].title %>"> Read More</a></li><br>
	</div>
	<% } %>
